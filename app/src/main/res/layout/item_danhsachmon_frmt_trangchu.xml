<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="15dp"
    android:background="@drawable/khung_tron">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/img_item_trangchu"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/purple_800"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/txt_tenMon_item_TT"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:hint="ten mon"
            android:textSize="20sp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginVertical="10dp">
        <TextView
            android:id="@+id/txtgiatien_item_trangchu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Giá tiền :"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/txtAdd_cart_trangchu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_local_grocery_store_24"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>
</LinearLayout>